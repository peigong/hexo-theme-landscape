<% if (site.categories.length){ %>
  <div class="widget-wrap">
    <h3 class="widget-title"><%= __('categories') %></h3>
    <div class="widget">
      <%-
        list_categories(landscapeCategoryPrepare(site.categories, site.data.categories), {
          show_count: theme.show_count,
          transform: createLandscapeCategoryTransform(site.data.categories),
          orderby: 'weight'
        })
      %>
    </div>
  </div>
<% } %>
